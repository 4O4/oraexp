start_rule :	create_object ;

create_object
	:	'CREATE' opt_or_replace
		obj_spec_or_body
	;
	
opt_or_replace
   :  'OR' 'REPLACE'
   |  
   ;
   
obj_spec_or_body 
   :  'PACKAGE' object_name
   |  'PACKAGE' 'BODY' object_name
   |  'PROCEDURE' object_name
   |  'FUNCTION' object_name
   |  'TRIGGER' object_name
   |  opt_force 'VIEW' object_name
   ;
   
opt_force
   :  opt_no force
   |  force
   |
   ;
   
opt_no
   :  no
   |
   ;   
   
no 
   :  'NO'
   ;
   
force
   :  'FORCE'
   ;

object_name
	:	identifier PLS_DOT identifier 
	|  identifier
	;
   
identifier
   :	PLS_ID
   |	PLS_DOUBLEQUOTED_STRING
   ;
